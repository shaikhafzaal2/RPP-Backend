{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "nodemon": "nodemon --watch .env --watch app.js --watch routes --watch models --watch middleware --watch config --watch bin ./bin/www",
    "start": "node ./bin/www",
    "test": "mocha --timeout 10000",
    "lint": "eslint app.js routes/**/*.js models/*.js routes/*.js",
    "pm2:install": "npm install pm2@latest -g",
    "pm2:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:reload": "pm2 restart all",
    "pm2:stop": "pm2 stop all",
    "pm2:kill": "pm2 kill",
    "pm2:monitor": "pm2 monit"
  },
  "dependencies": {
    "@azure/msal-node": "^1.15.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.17.1",
    "busboy": "^0.2.14",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "file-type": "^6.2.0",
    "jsonwebtoken": "^7.4.3",
    "jwks-rsa": "^3.0.1",
    "mongoose": "^4.11.3",
    "morgan": "~1.8.1",
    "msal": "^1.4.17",
    "multer": "^1.3.0",
    "nodemailer": "^4.0.1",
    "nodemailer-express-handlebars": "^2.0.0",
    "pdfkit": "^0.8.3",
    "pug": "~2.0.0-beta11",
    "serve-favicon": "~2.4.2",
    "stream-meter": "^1.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^4.1.0",
    "chai-http": "^3.0.0",
    "eslint": "^3.19.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "serve-favicon": "~2.4.2",
    "swagger-jsdoc": "^1.3.0"
  }
}
